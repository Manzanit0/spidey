{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test Function at Cursor",
      "command": "mix test ${relativeFile}:${lineNumber}",
      "group": "test",
      "type": "shell",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Test Current File",
      "command": "mix test ${relativeFile}",
      "group": "test",
      "type": "shell",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Run All Tests",
      "command": "mix test",
      "type": "shell",
      "group": "test",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
